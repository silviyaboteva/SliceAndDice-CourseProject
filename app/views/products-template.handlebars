 <div class="container">   
    <ol class="breadcrumb breadcumb-custom">
      <li class="breadcrumb-item"><i class="fa fa-home" aria-hidden="true"></i></li>
      <li class="breadcrumb-item"><a href="#/home">Home</a></li>
      <li class="breadcrumb-item active">All products</li>
    </ol>

    <div class="row">
        <div class="col col-md-10">
            <section class="products-filter">
                <span>Sort by</span>
                <span>Showing 1-12 of 347 results</span>

            </section>
            <hr/>
            <section class="products-list">
                <div class="row">
                    {{#each products}}
                    <div class="col col-md-4 col-sm-6 col-12">
                        <a href="#/products/product/{{this._id}}">
                            <img class="responsive-image" src="http://localhost:1337/api/products/image/{{this.image}}">
                        </a>
                        <div>{{this.name}}</div>
                        <div>{{this.price}}</div>
                        <button class="btn btn-theme-default">Add to cart</button>
                    </div>
                    {{/each}}
                </div>
            </section>
        </div>
        <div class="col col-md-2">

        </div>
    </div>
</div>

